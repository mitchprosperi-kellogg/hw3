<h1><%= @place["name"] %></h1>


<h3>Places</h3>

<ul>
  <% for post in @posts %>
    <p><%= post["title"] %></p> 
   <p> <%= post["description"] %> </p>
   <p> <%= post["posted_on"] %> </p>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>

