<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>

  <p>
    <%= form.label "long_description" %>
    <%= form.text_field "long_description" %>
  </p>

  <p>
    <%= form.label "date" %>
    <%= form.date_field "date" %> 
  </p>

  <p><%= form.submit %></p>
<% end %>